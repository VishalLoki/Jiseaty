<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:background="@color/lite_black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/youtube"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="52dp"
            android:text="JeniLectures"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="monospace"/>
        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/share"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/splash"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:background="@drawable/feeds_png"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:src="@drawable/cse1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/corner_main"/>
    <TextView
        android:id="@+id/description"
        android:text="Hello dude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="4sp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="monospace"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">
        <TextView
            android:id="@+id/dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science Engineering"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textSize="13dp"
            android:fontFamily="sans-serif"/>
    </RelativeLayout>

</LinearLayout>